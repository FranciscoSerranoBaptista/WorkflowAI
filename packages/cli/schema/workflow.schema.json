{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow Schema",
  "type": "object",
  "properties": {
    "settings": {
      "type": "object",
      "properties": {
        "parallelExecution": { "type": "boolean" },
        "retryOnFailure": { "type": "boolean" }
      },
      "required": ["parallelExecution", "retryOnFailure"]
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["read_write_file", "ai_agent"]
          },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" }
          },
          "config": {
            "type": "object",
            "properties": {
              "operation": { "type": "string" },
              "filePath": { "type": "string" },
              "llmConfig": {
                "type": "object",
                "properties": {
                  "model": { "type": "string" },
                  "temperature": { "type": "number" },
                  "maxTokens": { "type": "integer" },
                  "provider": { "type": "string" }
                },
                "required": ["model", "provider"]
              },
              "promptId": { "type": "string" }
            }
          }
        },
        "required": ["id", "type", "config"],
        "if": {
          "properties": { "type": { "const": "read_write_file" } }
        },
        "then": {
          "properties": {
            "config": {
              "required": ["operation", "filePath"]
            }
          }
        },
        "else": {
          "properties": {
            "config": {
              "required": ["llmConfig", "promptId"]
            }
          }
        }
      }
    }
  },
  "required": ["settings", "tasks"]
}
